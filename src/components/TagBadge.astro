---
import type { Lang } from '../i18n/languages';
import { useTranslations } from '../i18n/utils';

interface Props {
  tag: string;
  lang: Lang;
  interactive?: boolean;
}

const { tag, lang, interactive = false } = Astro.props;
const t = useTranslations(lang);
const tagKey = `tag.${tag}` as any;
const label = t(tagKey);
---

{interactive ? (
  <button
    data-tag={tag}
    class="tag-filter inline-block px-3 py-1 rounded-full border border-border bg-white font-sans text-xs font-medium text-muted hover:border-ink hover:text-ink transition-colors cursor-pointer data-[active]:bg-ink data-[active]:text-white data-[active]:border-ink"
  >
    {label}
  </button>
) : (
  <span class="inline-block px-3 py-1 rounded-full border border-border bg-white font-sans text-xs font-medium text-muted">
    {label}
  </span>
)}
