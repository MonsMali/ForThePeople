---
import type { Lang } from '../i18n/languages';
import { useTranslations } from '../i18n/utils';

interface Props {
  url: string;
  title: string;
  ogImageUrl?: string;
  lang: Lang;
}

const { url, title, ogImageUrl, lang } = Astro.props;
const t = useTranslations(lang);

const encodedUrl = encodeURIComponent(url);
const encodedTitle = encodeURIComponent(title);
const whatsappUrl = `https://wa.me/?text=${encodedTitle}%20${encodedUrl}`;
const xUrl = `https://x.com/intent/tweet?text=${encodedTitle}&url=${encodedUrl}`;
const fbUrl = `https://www.facebook.com/sharer/sharer.php?u=${encodedUrl}`;
---

<div class="mt-8 pt-6 border-t border-border">
  <h3 class="text-lg font-sans font-bold text-ink mb-4">{t('factpack.share')}</h3>
  <div class="grid grid-cols-2 sm:flex sm:flex-wrap gap-2 sm:gap-3">
    <!-- Copy Link -->
    <button
      id="copy-link-btn"
      data-url={url}
      class="inline-flex items-center justify-center gap-2 px-3 sm:px-4 py-2.5 sm:py-2 rounded-lg border border-border bg-white font-sans text-sm font-medium text-ink hover:bg-paper-dark transition-colors cursor-pointer"
    >
      <svg class="w-4 h-4 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1" />
      </svg>
      <span class="btn-text truncate">{t('share.copyLink')}</span>
    </button>

    <!-- Copy Image for WhatsApp -->
    {ogImageUrl && (
      <button
        id="copy-image-btn"
        data-og-image={ogImageUrl}
        class="inline-flex items-center justify-center gap-2 px-3 sm:px-4 py-2.5 sm:py-2 rounded-lg border border-green-300 bg-green-50 font-sans text-sm font-medium text-green-800 hover:bg-green-100 transition-colors cursor-pointer"
      >
        <svg class="w-4 h-4 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
        </svg>
        <span class="btn-text truncate">{t('share.copyImage')}</span>
      </button>
    )}

    <!-- WhatsApp -->
    <a
      href={whatsappUrl}
      target="_blank"
      rel="noopener noreferrer"
      class="inline-flex items-center justify-center gap-2 px-3 sm:px-4 py-2.5 sm:py-2 rounded-lg bg-[#25D366] font-sans text-sm font-medium text-white hover:bg-[#20bd5a] transition-colors"
    >
      <svg class="w-4 h-4 flex-shrink-0" fill="currentColor" viewBox="0 0 24 24">
        <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z" />
      </svg>
      <span class="truncate">{t('share.whatsapp')}</span>
    </a>

    <!-- X/Twitter -->
    <a
      href={xUrl}
      target="_blank"
      rel="noopener noreferrer"
      class="inline-flex items-center justify-center gap-2 px-3 sm:px-4 py-2.5 sm:py-2 rounded-lg bg-black font-sans text-sm font-medium text-white hover:bg-gray-800 transition-colors"
    >
      <svg class="w-4 h-4 flex-shrink-0" fill="currentColor" viewBox="0 0 24 24">
        <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z" />
      </svg>
      <span class="truncate">{t('share.x')}</span>
    </a>

    <!-- Facebook -->
    <a
      href={fbUrl}
      target="_blank"
      rel="noopener noreferrer"
      class="inline-flex items-center justify-center gap-2 px-3 sm:px-4 py-2.5 sm:py-2 rounded-lg bg-[#1877F2] font-sans text-sm font-medium text-white hover:bg-[#166FE5] transition-colors col-span-2 sm:col-span-1"
    >
      <svg class="w-4 h-4 flex-shrink-0" fill="currentColor" viewBox="0 0 24 24">
        <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z" />
      </svg>
      <span class="truncate">{t('share.facebook')}</span>
    </a>
  </div>
</div>

<script>
  // Copy Link
  document.getElementById('copy-link-btn')?.addEventListener('click', async (e) => {
    const btn = e.currentTarget as HTMLButtonElement;
    const url = btn.dataset.url;
    if (!url) return;
    try {
      await navigator.clipboard.writeText(url);
      const textEl = btn.querySelector('.btn-text');
      if (textEl) {
        const original = textEl.textContent;
        textEl.textContent = btn.closest('[data-lang="pt"]') ? 'Copiado!' : 'Copied!';
        setTimeout(() => { textEl.textContent = original; }, 2000);
      }
    } catch {
      // Fallback
      const input = document.createElement('input');
      input.value = url;
      document.body.appendChild(input);
      input.select();
      document.execCommand('copy');
      document.body.removeChild(input);
    }
  });

  // Copy Image for WhatsApp
  document.getElementById('copy-image-btn')?.addEventListener('click', async (e) => {
    const btn = e.currentTarget as HTMLButtonElement;
    const ogImageUrl = btn.dataset.ogImage;
    if (!ogImageUrl) return;
    try {
      const response = await fetch(ogImageUrl);
      const blob = await response.blob();
      await navigator.clipboard.write([
        new ClipboardItem({ [blob.type]: blob }),
      ]);
      const textEl = btn.querySelector('.btn-text');
      if (textEl) {
        const original = textEl.textContent;
        textEl.textContent = btn.closest('[data-lang="pt"]') ? 'Copiado!' : 'Copied!';
        setTimeout(() => { textEl.textContent = original; }, 2000);
      }
    } catch {
      // Fallback: open image in new tab
      window.open(ogImageUrl, '_blank');
    }
  });
</script>
