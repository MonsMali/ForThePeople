---
import type { Lang } from '../i18n/languages';
import { useTranslations } from '../i18n/utils';
import LanguageSwitcher from './LanguageSwitcher.astro';

interface Props {
  lang: Lang;
  translationKey?: string;
}

const { lang, translationKey } = Astro.props;
const t = useTranslations(lang);
---

<header class="border-b border-border bg-white/80 backdrop-blur-sm sticky top-0 z-50">
  <div class="max-w-4xl mx-auto px-4 py-3 flex items-center justify-between">
    <a href={`/${lang}/`} class="flex items-center gap-2.5 no-underline group">
      <img src="/logo.png" alt="Source Check logo" class="w-8 h-8 rounded-full" />
      <span class="text-lg font-sans font-bold text-ink tracking-tight group-hover:text-ink/70 transition-colors">
        {t('site.title')}
      </span>
    </a>
    <div class="flex items-center gap-1 sm:gap-4">
      <nav class="flex items-center gap-1 sm:gap-3">
        <a
          href={`/${lang}/`}
          class="font-sans text-sm text-muted hover:text-ink transition-colors px-2 py-1 rounded"
        >
          {t('nav.home')}
        </a>
        <a
          href={`/${lang}/about/`}
          class="font-sans text-sm text-muted hover:text-ink transition-colors px-2 py-1 rounded"
        >
          {t('nav.about')}
        </a>
        <a
          href={`/${lang}/about/#${lang === 'pt' ? 'metodologia' : 'methodology'}`}
          class="font-sans text-sm text-muted hover:text-ink transition-colors px-2 py-1 rounded"
        >
          {t('nav.methodology')}
        </a>
      </nav>
      <div class="border-l border-border pl-3 ml-1">
        <LanguageSwitcher lang={lang} translationKey={translationKey} />
      </div>
    </div>
  </div>
</header>
