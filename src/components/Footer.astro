---
import type { Lang } from '../i18n/languages';
import { useTranslations } from '../i18n/utils';

interface Props {
  lang: Lang;
}

const { lang } = Astro.props;
const t = useTranslations(lang);
const year = new Date().getFullYear();
---

<footer class="border-t border-border bg-ink text-white/70 mt-16">
  <div class="max-w-4xl mx-auto px-4 py-10">
    <div class="flex flex-col md:flex-row md:items-start md:justify-between gap-8">
      <div class="max-w-sm">
        <p class="font-sans font-bold text-white text-base mb-2">{t('site.title')}</p>
        <p class="text-sm leading-relaxed">{t('footer.description')}</p>
        <p class="text-sm leading-relaxed mt-2">{t('footer.methodology')}</p>
        <p class="text-sm leading-relaxed mt-2 text-white/50">{t('footer.selfFunded')}</p>
      </div>
      <div class="flex flex-col gap-3">
        <nav class="flex flex-col gap-1.5">
          <a href={`/${lang}/`} class="font-sans text-sm hover:text-white transition-colors">{t('nav.home')}</a>
          <a href={`/${lang}/about/`} class="font-sans text-sm hover:text-white transition-colors">{t('nav.about')}</a>
          <a href={`/${lang}/about/#${lang === 'pt' ? 'metodologia' : 'methodology'}`} class="font-sans text-sm hover:text-white transition-colors">{t('nav.methodology')}</a>
        </nav>
      </div>
      <div class="max-w-xs flex flex-col gap-3">
        <p class="text-sm leading-relaxed">{t('footer.license')}</p>
        <a
          href="https://github.com/MonsMali/ForThePeople"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 font-sans text-sm text-white/80 hover:text-white transition-colors"
        >
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>
          {t('footer.viewCode')}
        </a>
        <a
          href="https://sourcecheckorg.substack.com/"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 font-sans text-sm text-white/80 hover:text-white transition-colors"
        >
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M22.539 8.242H1.46V5.406h21.08v2.836zM1.46 10.812V24L12 18.11 22.54 24V10.812H1.46zM22.54 0H1.46v2.836h21.08V0z"/></svg>
          {t('footer.newsletter')}
        </a>
        <a
          href="https://ko-fi.com/sourcecheck"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 font-sans text-sm text-white/80 hover:text-white transition-colors"
        >
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M23.881 8.948c-.773-4.085-4.859-4.593-4.859-4.593H.723c-.604 0-.679.798-.679.798s-.082 7.324-.022 11.822c.164 2.424 2.586 2.672 2.586 2.672s8.267-.023 11.966-.049c2.438-.426 2.683-2.566 2.658-3.734 4.352.24 7.422-2.831 6.649-6.916zm-11.062 3.511c-1.246 1.453-4.011 3.976-4.011 3.976s-.121.119-.31.023c-.076-.057-.108-.09-.108-.09-.443-.441-3.368-3.049-4.034-3.954-.709-.965-1.041-2.7-.091-3.71.951-1.01 3.005-1.086 4.363.407 0 0 1.565-1.782 3.468-.963 1.904.82 1.832 3.011.723 4.311zm6.173.478c-.928.116-1.682.028-1.682.028V7.284h1.77s1.971.551 1.971 2.638c0 1.913-.985 2.667-2.059 3.015z"/></svg>
          {t('footer.support')}
        </a>
      </div>
    </div>
    <div class="border-t border-white/10 mt-8 pt-6 text-xs text-white/40">
      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-2">
        <p>&copy; {year} {t('site.title')}</p>
        <p>{t('footer.disclaimer')}</p>
      </div>
    </div>
  </div>
</footer>
