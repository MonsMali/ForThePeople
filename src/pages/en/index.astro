---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import FactpackCard from '../../components/FactpackCard.astro';
import TagBadge from '../../components/TagBadge.astro';
import { useTranslations } from '../../i18n/utils';
import type { Lang } from '../../i18n/languages';

const lang: Lang = 'en';
const t = useTranslations(lang);

const allFactpacks = await getCollection('factpacks_en', ({ data }) => !data.draft);
const factpacks = allFactpacks.sort(
  (a, b) => b.data.publishedDate.getTime() - a.data.publishedDate.getTime()
);

const allTags = [...new Set(factpacks.flatMap((fp) => fp.data.tags))].sort();
---

<BaseLayout
  title={t('site.title')}
  description={t('site.description')}
  lang={lang}
>
  <!-- Hero -->
  <section class="bg-ink text-white py-16 md:py-24">
    <div class="max-w-4xl mx-auto px-4 text-center">
      <h1 class="text-4xl md:text-5xl font-sans font-bold mb-4 leading-tight">
        {t('home.hero.title')}<br />
        <span class="text-yellow-400">{t('home.hero.subtitle')}</span>
      </h1>
      <p class="text-lg md:text-xl text-white/60 max-w-2xl mx-auto leading-relaxed mt-4">
        {t('home.hero.description')}
      </p>
    </div>
  </section>

  <!-- How It Works -->
  <section class="border-b border-border bg-white">
    <div class="max-w-4xl mx-auto px-4 py-12">
      <h2 class="text-center text-sm font-sans font-bold uppercase tracking-widest text-muted mb-8">
        {t('nav.howItWorks')}
      </h2>
      <div class="grid sm:grid-cols-3 gap-8 text-center">
        <div>
          <div class="w-12 h-12 mx-auto mb-3 rounded-full bg-paper-dark flex items-center justify-center">
            <svg class="w-6 h-6 text-ink" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M8.625 12a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Zm0 0H8.25m4.125 0a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Zm0 0H12m4.125 0a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Zm0 0h-.375M21 12c0 4.556-4.03 8.25-9 8.25a9.764 9.764 0 0 1-2.555-.337A5.972 5.972 0 0 1 5.41 20.97a5.969 5.969 0 0 1-.474-.065 4.48 4.48 0 0 0 .978-2.025c.09-.457-.133-.901-.467-1.226C3.93 16.178 3 14.189 3 12c0-4.556 4.03-8.25 9-8.25s9 3.694 9 8.25Z" />
            </svg>
          </div>
          <h3 class="font-sans font-bold text-ink text-sm mb-1">A politician makes a claim</h3>
          <p class="font-sans text-xs text-muted leading-relaxed">We identify specific, verifiable statements — not opinions or predictions.</p>
        </div>
        <div>
          <div class="w-12 h-12 mx-auto mb-3 rounded-full bg-paper-dark flex items-center justify-center">
            <svg class="w-6 h-6 text-ink" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 14.25v-2.625a3.375 3.375 0 0 0-3.375-3.375h-1.5A1.125 1.125 0 0 1 13.5 7.125v-1.5a3.375 3.375 0 0 0-3.375-3.375H8.25m5.231 13.481L15 17.25m-4.5-15H5.625c-.621 0-1.125.504-1.125 1.125v16.5c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 0 0-9-9Zm3.75 11.625a2.625 2.625 0 1 1-5.25 0 2.625 2.625 0 0 1 5.25 0Z" />
            </svg>
          </div>
          <h3 class="font-sans font-bold text-ink text-sm mb-1">We find the documents</h3>
          <p class="font-sans text-xs text-muted leading-relaxed">Parliamentary records, official votes, court filings — the actual source, not hearsay.</p>
        </div>
        <div>
          <div class="w-12 h-12 mx-auto mb-3 rounded-full bg-paper-dark flex items-center justify-center">
            <svg class="w-6 h-6 text-ink" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 3v17.25m0 0c-1.472 0-2.882.265-4.185.75M12 20.25c1.472 0 2.882.265 4.185.75M18.75 4.97A48.416 48.416 0 0 0 12 4.5c-2.291 0-4.545.16-6.75.47m13.5 0c1.01.143 2.01.317 3 .52m-3-.52 2.62 10.726c.122.499-.106 1.028-.589 1.202a5.988 5.988 0 0 1-2.031.352 5.988 5.988 0 0 1-2.031-.352c-.483-.174-.711-.703-.59-1.202L18.75 4.971Zm-16.5.52c.99-.203 1.99-.377 3-.52m0 0 2.62 10.726c.122.499-.106 1.028-.589 1.202a5.989 5.989 0 0 1-2.031.352 5.989 5.989 0 0 1-2.031-.352c-.483-.174-.711-.703-.59-1.202L5.25 4.971Z" />
            </svg>
          </div>
          <h3 class="font-sans font-bold text-ink text-sm mb-1">You decide</h3>
          <p class="font-sans text-xs text-muted leading-relaxed">We show both side by side. Every source is linked. You never have to take our word for it.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Fact Packs -->
  <section class="max-w-4xl mx-auto px-4 py-12">
    <h2 class="text-2xl font-sans font-bold text-ink mb-6">
      {t('home.factpacks.title')}
    </h2>

    <!-- Search -->
    <div class="mb-6">
      <input
        type="text"
        id="search-input"
        placeholder={t('home.search.placeholder')}
        class="w-full px-4 py-3 rounded-lg border border-border bg-white font-sans text-sm text-ink placeholder:text-muted focus:outline-none focus:ring-2 focus:ring-ink/20 focus:border-ink/30"
      />
    </div>

    <!-- Tag Filters -->
    <div class="flex flex-wrap gap-2 mb-8" id="tag-filters">
      {allTags.map((tag) => (
        <TagBadge tag={tag} lang={lang} interactive />
      ))}
    </div>

    <!-- Grid -->
    <div class="grid gap-4 md:grid-cols-2" id="factpack-grid">
      {factpacks.map((fp) => (
        <FactpackCard
          slug={fp.id}
          title={fp.data.title}
          summary={fp.data.summary}
          verdict={fp.data.verdict}
          verdictSummary={fp.data.verdictSummary}
          tags={fp.data.tags}
          publishedDate={fp.data.publishedDate}
          lang={lang}
        />
      ))}
    </div>

    <p id="no-results" class="hidden text-center text-muted font-sans py-8">
      {t('home.noResults')}
    </p>
  </section>

  <!-- CTA / Methodology teaser -->
  <section class="border-t border-border bg-paper-dark">
    <div class="max-w-4xl mx-auto px-4 py-12 text-center">
      <h2 class="text-xl font-sans font-bold text-ink mb-3">Transparent by design</h2>
      <p class="font-sans text-sm text-muted max-w-xl mx-auto mb-5 leading-relaxed">
        Every verdict links to primary sources. Every document is accessible.
        If we got something wrong, you can check — and we'll correct it publicly.
      </p>
      <a
        href={`/${lang}/about/`}
        class="inline-block font-sans text-sm font-medium text-ink border border-ink px-5 py-2 rounded hover:bg-ink hover:text-white transition-colors"
      >
        Read our methodology
      </a>
    </div>
  </section>

  <!-- Support & Subscribe -->
  <section class="border-t border-border bg-ink text-white">
    <div class="max-w-4xl mx-auto px-4 py-12 text-center">
      <h2 class="text-xl font-sans font-bold mb-3">Keep fact-checking independent</h2>
      <p class="font-sans text-sm text-white/60 max-w-xl mx-auto mb-6 leading-relaxed">
        No political donors. No corporate sponsors. Just documents and facts.
        Support the project or subscribe for a weekly digest.
      </p>
      <div class="flex flex-col sm:flex-row items-center justify-center gap-3">
        <a
          href="https://ko-fi.com/sourcecheck"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 font-sans text-sm font-medium bg-white text-ink px-5 py-2.5 rounded hover:bg-white/90 transition-colors"
        >
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M23.881 8.948c-.773-4.085-4.859-4.593-4.859-4.593H.723c-.604 0-.679.798-.679.798s-.082 7.324-.022 11.822c.164 2.424 2.586 2.672 2.586 2.672s8.267-.023 11.966-.049c2.438-.426 2.683-2.566 2.658-3.734 4.352.24 7.422-2.831 6.649-6.916zm-11.062 3.511c-1.246 1.453-4.011 3.976-4.011 3.976s-.121.119-.31.023c-.076-.057-.108-.09-.108-.09-.443-.441-3.368-3.049-4.034-3.954-.709-.965-1.041-2.7-.091-3.71.951-1.01 3.005-1.086 4.363.407 0 0 1.565-1.782 3.468-.963 1.904.82 1.832 3.011.723 4.311zm6.173.478c-.928.116-1.682.028-1.682.028V7.284h1.77s1.971.551 1.971 2.638c0 1.913-.985 2.667-2.059 3.015z"/></svg>
          Support on Ko-fi
        </a>
        <a
          href="https://sourcecheckorg.substack.com/"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 font-sans text-sm font-medium border border-white/30 text-white px-5 py-2.5 rounded hover:bg-white/10 transition-colors"
        >
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M22.539 8.242H1.46V5.406h21.08v2.836zM1.46 10.812V24L12 18.11 22.54 24V10.812H1.46zM22.54 0H1.46v2.836h21.08V0z"/></svg>
          Subscribe to newsletter
        </a>
      </div>
    </div>
  </section>
</BaseLayout>

<script>
  const searchInput = document.getElementById('search-input') as HTMLInputElement;
  const grid = document.getElementById('factpack-grid')!;
  const cards = grid.querySelectorAll<HTMLElement>('.factpack-card');
  const noResults = document.getElementById('no-results')!;
  const tagButtons = document.querySelectorAll<HTMLButtonElement>('.tag-filter');

  let activeTag = '';

  function filterCards() {
    const query = searchInput.value.toLowerCase().trim();
    let visibleCount = 0;

    cards.forEach((card) => {
      const title = card.dataset.title || '';
      const summary = card.dataset.summary || '';
      const tags = card.dataset.tags || '';
      const matchesSearch = !query || title.includes(query) || summary.includes(query);
      const matchesTag = !activeTag || tags.split(',').includes(activeTag);
      const visible = matchesSearch && matchesTag;
      card.style.display = visible ? '' : 'none';
      if (visible) visibleCount++;
    });

    noResults.classList.toggle('hidden', visibleCount > 0);
  }

  searchInput.addEventListener('input', filterCards);

  tagButtons.forEach((btn) => {
    btn.addEventListener('click', () => {
      const tag = btn.dataset.tag || '';
      if (activeTag === tag) {
        activeTag = '';
        btn.removeAttribute('data-active');
      } else {
        tagButtons.forEach((b) => b.removeAttribute('data-active'));
        activeTag = tag;
        btn.setAttribute('data-active', '');
      }
      filterCards();
    });
  });
</script>
